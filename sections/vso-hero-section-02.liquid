{%- liquid
  assign content_max_width       = section.settings.content_max_width
  assign mobile_padding_top      = section.settings.mobile_padding_top
  assign mobile_padding_bottom   = section.settings.mobile_padding_bottom
  assign block_spacing           = section.settings.block_spacing
  assign background_color        = section.settings.background_color
  assign full_width             = section.settings.full_width
  assign content_width          = section.settings.content_width
-%}

{%- style -%}
  .vso-hero-promo-section {
    width: 100%;
    max-width: 100%;
    position: relative;
    overflow: hidden;
    --desktop-heading-size: 42px;
    --mobile-heading-size: 32px;
    --desktop-paragraph-size: 18px;
    --mobile-paragraph-size: 16px;
    --desktop-rating-size: 16px;
    --mobile-rating-size: 14px;
    --star-size: 24px;
    --star-size-mobile: 18px;
    --star-gap: 2px;
    --star-text-gap: 10px;
    --benefit-icon-size: 20px;
    --benefit-spacing: 10px;
    --benefit-font-size-desktop: 14px;
    --benefit-font-size-mobile: 12px;
  }

  #vso-hero-promo-{{ section.id }} > .vso-hero-promo-container {
    display: flex;
    flex-direction: row;
    width: 100%;
  }

  #vso-hero-promo-{{ section.id }} > .vso-hero-promo-container > .vso-hero-promo-content {
    width: 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: 0 15px;
  }

  #vso-hero-promo-{{ section.id }} > .vso-hero-promo-container > .vso-hero-promo-content > .vso-hero-promo-content-inner {
    max-width: var(--content-max-width);
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: var(--block-spacing);
    align-items: center;
  }

  #vso-hero-promo-{{ section.id }} .vso-hero-promo-content h1,
  #vso-hero-promo-{{ section.id }} .vso-hero-promo-content h2,
  #vso-hero-promo-{{ section.id }} .vso-hero-promo-content p,
  #vso-hero-promo-{{ section.id }} .vso-hero-promo-paragraph .rte,
  #vso-hero-promo-{{ section.id }} .vso-hero-promo-paragraph .rte p {
    margin: 0;
    padding: 0;
    line-height: 1.3;
  }

  #vso-hero-promo-{{ section.id }} > .vso-hero-promo-container > .vso-hero-promo-image-container {
    width: 50%;
    position: relative;
  }

  #vso-hero-promo-{{ section.id }} .vso-hero-promo-image-container > .vso-hero-promo-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  #vso-hero-promo-{{ section.id }} .vso-hero-promo-image-container > .vso-hero-promo-video-wrapper {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    overflow: hidden;
  }

  #vso-hero-promo-{{ section.id }} .vso-hero-promo-video-wrapper > .vso-hero-promo-video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  #vso-hero-promo-{{ section.id }} .vso-hero-promo-video-wrapper > iframe {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 100%;
    height: 100%;
    transform: translate(-50%, -50%);
    object-fit: cover;
  }

  .vso-node {
    display: none;
  }
  .vso-node--v2 {
    display: block;
  }

  #vso-hero-promo-{{ section.id }} .vso-hero-promo-content-inner > .vso-hero-promo-rating-container {
    background-color: var(--container-background);
    padding: var(--container-padding-vertical) var(--container-padding-horizontal);
    border-radius: var(--container-border-radius);
    border: var(--container-border-width) solid var(--container-border-color);
    box-shadow: var(--container-shadow);
    display: inline-block;
  }

  #vso-hero-promo-{{ section.id }} .vso-hero-promo-rating-container > .vso-hero-promo-rating {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    line-height: 1;
  }

  #vso-hero-promo-{{ section.id }} .vso-hero-promo-rating > .vso-hero-promo-stars {
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0;
    padding: 0;
    margin-right: var(--star-text-gap);
    color: var(--star-color);
    line-height: 1;
  }

  #vso-hero-promo-{{ section.id }} .vso-hero-promo-stars > .vso-hero-star-icon {
    display: inline-block;
    width: var(--star-size);
    height: var(--star-size);
    margin-right: var(--star-gap);
  }

  #vso-hero-promo-{{ section.id }} .vso-hero-star-icon > svg {
    width: 100%;
    height: 100%;
  }

  #vso-hero-promo-{{ section.id }} .vso-hero-star-icon > .vso-hero-custom-star {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  #vso-hero-promo-{{ section.id }} .vso-hero-promo-stars > .vso-hero-star-icon:last-child {
    margin-right: 0;
  }

  #vso-hero-promo-{{ section.id }} .vso-hero-promo-rating > .vso-hero-promo-rating-text {
    margin: 0;
    padding: 0;
    line-height: 1;
    font-size: var(--desktop-rating-size);
    color: var(--rating-text-color);
    display: flex;
    align-items: center;
  }

  #vso-hero-promo-{{ section.id }} .vso-hero-promo-content-inner > .vso-hero-promo-heading {
    font-weight: bold;
  }

  #vso-hero-promo-{{ section.id }} .vso-hero-promo-heading > h1 {
    font-size: var(--desktop-heading-size);
    color: var(--heading-color);
  }

  #vso-hero-promo-{{ section.id }} .vso-hero-promo-content-inner > .vso-hero-promo-paragraph {
    color: var(--paragraph-color);
    font-size: var(--desktop-paragraph-size);
  }

  #vso-hero-promo-{{ section.id }} .vso-hero-promo-paragraph > .rte,
  #vso-hero-promo-{{ section.id }} .vso-hero-promo-paragraph > .rte p {
    font-size: var(--desktop-paragraph-size);
  }

  #vso-hero-promo-{{ section.id }} .vso-hero-promo-content-inner > .vso-hero-promo-button {
    padding: 12px 25px;
    text-decoration: none;
    text-transform: uppercase;
    font-weight: bold;
    border-radius: 0;
    display: inline-block;
    transition: all 0.3s ease;
    cursor: pointer;
    text-align: center;
  }

  #vso-hero-promo-{{ section.id }} .vso-hero-promo-content-inner > .vso-hero-promo-benefit {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 5px;
  }

  #vso-hero-promo-{{ section.id }} .vso-hero-promo-benefit > .vso-hero-promo-benefit-icon {
    width: var(--benefit-icon-size);
    height: var(--benefit-icon-size);
    margin-right: var(--benefit-spacing);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  #vso-hero-promo-{{ section.id }} .vso-hero-promo-benefit > .vso-hero-promo-benefit-text {
    font-size: var(--benefit-font-size-desktop);
    color: var(--benefit-font-color);
    display: flex;
    align-items: center;
    line-height: 1;
  }

  @media screen and (max-width: 768px) {
    #vso-hero-promo-{{ section.id }} > .vso-hero-promo-container {
      flex-direction: column-reverse;
    }

    #vso-hero-promo-{{ section.id }} > .vso-hero-promo-container > .vso-hero-promo-content {
      width: 100%;
      padding-top: var(--mobile-padding-top);
      padding-bottom: var(--mobile-padding-bottom);
    }

    #vso-hero-promo-{{ section.id }} > .vso-hero-promo-container > .vso-hero-promo-image-container {
      width: 100%;
    }

    #vso-hero-promo-{{ section.id }} .vso-hero-promo-heading > h1 {
      font-size: var(--mobile-heading-size);
    }

    #vso-hero-promo-{{ section.id }} .vso-hero-promo-paragraph,
    #vso-hero-promo-{{ section.id }} .vso-hero-promo-paragraph > .rte,
    #vso-hero-promo-{{ section.id }} .vso-hero-promo-paragraph > .rte p {
      font-size: var(--mobile-paragraph-size);
    }

    #vso-hero-promo-{{ section.id }} .vso-hero-promo-rating > .vso-hero-promo-rating-text {
      font-size: var(--mobile-rating-size);
    }

    #vso-hero-promo-{{ section.id }} .vso-hero-promo-stars > .vso-hero-star-icon {
      width: var(--star-size-mobile);
      height: var(--star-size-mobile);
    }

    #vso-hero-promo-{{ section.id }} .vso-hero-promo-benefit > .vso-hero-promo-benefit-text {
      font-size: var(--benefit-font-size-mobile);
    }

    #vso-hero-promo-{{ section.id }} .vso-hero-promo-content-inner > .vso-hero-promo-button {
      padding: var(--button-padding-vertical-mobile) var(--button-padding-horizontal-mobile);
      border-radius: var(--button-border-radius-mobile);
      font-size: var(--button-font-size-mobile);
    }
  }
{%- endstyle -%}

{% unless full_width %}
  <style>
    #vso-hero-promo-{{ section.id }} > .vso-hero-promo-container {
      max-width: {{ content_width }}rem;
      margin-left: auto;
      margin-right: auto;
    }
  </style>
{% endunless %}

<div class="vso-node vso-hero-promo-section" id="vso-hero-promo-{{ section.id }}">
  {%- for block in section.blocks -%}
    {%- case block.type -%}
      {%- when 'rating' -%}
        {%- if block.settings.custom_font -%}
          <style>
            #vso-hero-promo-{{ section.id }} .vso-hero-promo-rating-text {
              font-family: {{ block.settings.font.family }}, {{ block.settings.font.fallback_families }};
              font-style: {{ block.settings.font.style }};
            }
          </style>
        {%- endif -%}
      {%- when 'heading' -%}
        {%- if block.settings.custom_font -%}
          <style>
            #vso-hero-promo-{{ section.id }} .vso-hero-promo-heading h1 {
              font-family: {{ block.settings.font.family }}, {{ block.settings.font.fallback_families }};
              font-style: {{ block.settings.font.style }};
            }
          </style>
        {%- endif -%}
      {%- when 'paragraph' -%}
        {%- if block.settings.custom_font -%}
          <style>
            #vso-hero-promo-{{ section.id }} .vso-hero-promo-paragraph,
            #vso-hero-promo-{{ section.id }} .vso-hero-promo-paragraph .rte,
            #vso-hero-promo-{{ section.id }} .vso-hero-promo-paragraph .rte p {
              font-family: {{ block.settings.font.family }}, {{ block.settings.font.fallback_families }};
              font-style: {{ block.settings.font.style }};
            }
          </style>
        {%- endif -%}
      {%- when 'button' -%}
        {%- if block.settings.custom_font -%}
          <style>
            #vso-hero-promo-{{ section.id }} .vso-hero-promo-button {
              font-family: {{ block.settings.font.family }}, {{ block.settings.font.fallback_families }};
              font-style: {{ block.settings.font.style }};
            }
          </style>
        {%- endif -%}
      {%- when 'benefit' -%}
        {%- if block.settings.custom_font -%}
          <style>
            #vso-hero-promo-{{ section.id }} .vso-hero-promo-benefit-text {
              font-family: {{ block.settings.font.family }}, {{ block.settings.font.fallback_families }};
              font-style: {{ block.settings.font.style }};
            }
          </style>
        {%- endif -%}
    {%- endcase -%}
  {%- endfor -%}

  <div class="vso-hero-promo-container">
    <div class="vso-hero-promo-content"
         style="--block-spacing: {{ block_spacing }}px; --content-max-width: {{ content_max_width }}px; --mobile-padding-top: {{ mobile_padding_top }}px; --mobile-padding-bottom: {{ mobile_padding_bottom }}px; background-color: {{ background_color }};">
      <div class="vso-hero-promo-content-inner">
        {%- assign image_block = null -%}
        {%- for block in section.blocks -%}
          {%- if block.type == 'image' -%}
            {%- assign image_block = block -%}
            {%- continue -%}
          {%- endif -%}

          {%- case block.type -%}
            {%- when 'rating' -%}
              <div class="vso-hero-promo-rating-container"
                   style="--container-background: {{ block.settings.background_color }}; --container-padding-vertical: {{ block.settings.inner_padding_vertical }}px; --container-padding-horizontal: {{ block.settings.inner_padding_horizontal }}px; --container-border-radius: {{ block.settings.border_radius }}px; --container-border-width: {{ block.settings.border_width }}px; --container-border-color: {{ block.settings.border_color }};{% if block.settings.enable_shadow %} --container-shadow: 0 0 {{ block.settings.shadow_blur }}px {{ block.settings.shadow_color }};{% else %} --container-shadow: none;{% endif %}"
                   {{ block.shopify_attributes }}>
                <div class="vso-hero-promo-rating"
                     style="--desktop-rating-size: {{ block.settings.text_size_desktop }}px; --mobile-rating-size: {{ block.settings.text_size_mobile }}px; --star-size: {{ block.settings.star_size }}px; --star-size-mobile: {{ block.settings.star_size_mobile }}px; --star-gap: {{ block.settings.star_gap }}px; --star-text-gap: {{ block.settings.star_text_gap }}px; --star-color: {{ block.settings.star_color }}; --star-empty-color: {{ block.settings.star_empty_color }}; --rating-text-color: {{ block.settings.text_color }};">
                <div class="vso-hero-promo-stars">
                  {%- if block.settings.star_style == 'custom' and block.settings.custom_star_image != blank -%}
                    {%- liquid
                      assign rating = block.settings.star_rating
                      assign full_stars = rating | floor
                      assign half_star = rating | modulo: 1
                      assign empty_stars = 5 | minus: full_stars
                      if half_star >= 0.5
                        assign empty_stars = empty_stars | minus: 1
                      endif
                    -%}

                    {%- for i in (1..full_stars) -%}
                      <span class="vso-hero-star-icon">
                        {{ block.settings.custom_star_image | image_url: width: 50 | image_tag: loading: 'lazy', class: 'vso-hero-custom-star' }}
                      </span>
                    {%- endfor -%}
                    {%- if half_star >= 0.5 -%}
                      <span class="vso-hero-star-icon">
                        {{ block.settings.custom_star_image | image_url: width: 50 | image_tag: loading: 'lazy', class: 'vso-hero-custom-star', style: 'opacity: 0.5;' }}
                      </span>
                    {%- endif -%}
                    {%- for i in (1..empty_stars) -%}
