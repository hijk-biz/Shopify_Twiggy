{%- style -%}
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    --section-padding-top-mobile: {{ section.settings.padding_top_mobile }}px;
    --section-padding-bottom-mobile: {{ section.settings.padding_bottom_mobile }}px;
    --section-bg-color: {{ section.settings.section_bg_color }};
    --heading-font-size: {{ section.settings.heading_font_size }}px;
    --heading-font-size-mobile: {{ section.settings.heading_font_size_mobile }}px;
    --heading-color: {{ section.settings.heading_color }};
    --card-bg-color: {{ section.settings.card_bg_color }};
    --card-padding-vertical: {{ section.settings.card_padding_vertical }}px;
    --card-padding-horizontal: {{ section.settings.card_padding_horizontal }}px;
    --card-border-radius: {{ section.settings.card_border_radius }}px;
    --icon-text-gap: {{ section.settings.icon_text_gap }}px;
    --card-title-font-size: {{ section.settings.card_title_font_size }}px;
    --card-title-font-size-mobile: {{ section.settings.card_title_font_size_mobile }}px;
    --card-desc-font-size: {{ section.settings.card_desc_font_size }}px;
    --card-desc-font-size-mobile: {{ section.settings.card_desc_font_size_mobile }}px;
    --grid-gap: {{ section.settings.grid_gap }}px;

    background-color: var(--section-bg-color);
    padding-top: var(--section-padding-top-mobile);
    padding-bottom: var(--section-padding-bottom-mobile);
    margin-top: {{ section.settings.margin_top_mobile }}px;
    margin-bottom: {{ section.settings.margin_bottom_mobile }}px;
  }

  #shopify-section-{{ section.id }} > .vso-benefit-section__container {
    max-width: {{ section.settings.content_max_width }}rem;
    margin-left: auto;
    margin-right: auto;
  }

  #shopify-section-{{ section.id }} > .vso-benefit-section__container > .vso-benefit-section__title {
    font-size: var(--heading-font-size-mobile);
    font-weight: 700;
    line-height: 1.2;
    margin-top: 0;
    color: var(--heading-color);
  }

  #shopify-section-{{ section.id }} > .vso-benefit-section__container > .vso-benefit-section__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--grid-gap);
  }

  #shopify-section-{{ section.id }} .vso-benefit-section__card {
    white-space: normal;
    box-sizing: border-box;
    width: 100%;
    background-color: var(--card-bg-color);
    padding: var(--card-padding-vertical) var(--card-padding-horizontal);
    border-radius: var(--card-border-radius);
    display: flex;
    align-items: {% if section.settings.icon_vertical_alignment == 'center' %}center{% else %}flex-start{% endif %};
    gap: var(--icon-text-gap);
    text-align: left;
    height: 100%;
  }

  #shopify-section-{{ section.id }} .vso-benefit-section__card > .vso-benefit-section__icon {
    flex-shrink: 0;
    line-height: 0;
  }

  #shopify-section-{{ section.id }} .vso-benefit-section__card > .vso-benefit-section__icon > img {
    display: block;
    object-fit: contain;
  }

  #shopify-section-{{ section.id }} .vso-benefit-section__card > .vso-benefit-section__text-content {
    flex-grow: 1;
    min-width: 0;
    white-space: normal;
    overflow-wrap: break-word;
    word-break: break-word;
    align-self: flex-start;
  }

  #shopify-section-{{ section.id }} .vso-benefit-section__card-title {
    margin: 0 0 5px;
    font-size: var(--card-title-font-size-mobile);
    font-weight: 700;
    line-height: 1.3;
  }

  #shopify-section-{{ section.id }} .vso-benefit-section__card-description {
    margin: 0;
    font-size: var(--card-desc-font-size-mobile);
    line-height: 1.5;
    color: #555;
    white-space: normal;
    overflow-wrap: break-word;
    word-break: break-word;
  }

  #shopify-section-{{ section.id }} .vso-benefit-section__card-description > p { margin: 0; }

  #shopify-section-{{ section.id }} .text-left { text-align: left; }
  #shopify-section-{{ section.id }} .text-center { text-align: center; }
  #shopify-section-{{ section.id }} .text-right { text-align: right; }

  #shopify-section-{{ section.id }} .mobile-only { display: {% if mobile_layout == 'carousel' %}block{% else %}none{% endif %}; }
  #shopify-section-{{ section.id }} .desktop-tablet-only { display: {% if mobile_layout == 'carousel' %}none{% else %}grid{% endif %}; }

  #shopify-section-{{ section.id }} > .vso-benefit-section__container > .vso-benefit-section__carousel {
    position: relative;
    width: 100%;
    overflow: hidden;
    padding: 0;
  }

  #shopify-section-{{ section.id }} .vso-benefit-section__carousel > .vso-benefit-section__carousel-track {
    display: flex;
    align-items: stretch;
    overflow-x: auto;
    scroll-behavior: smooth;
    scroll-snap-type: x mandatory;
    scrollbar-width: none;
    -ms-overflow-style: none;
    padding: 10px 0;
    -webkit-overflow-scrolling: touch;
    cursor: grab;
  }
  #shopify-section-{{ section.id }} .vso-benefit-section__carousel-track::-webkit-scrollbar { display: none; }
  #shopify-section-{{ section.id }} .vso-benefit-section__carousel-track:active { cursor: grabbing; }

  #shopify-section-{{ section.id }} .vso-benefit-section__carousel-slide {
    flex: 0 0 calc(100% - {{ mobile_peek_percentage }}%);
    max-width: calc(100% - {{ mobile_peek_percentage }}%);
    scroll-snap-align: start;
    margin-right: {{ mobile_card_gap }}px;
    user-select: none;
    transition: transform 0.1s ease;
    height: auto;
  }
  #shopify-section-{{ section.id }} .vso-benefit-section__carousel-slide:first-child { margin-left: 0; }
  #shopify-section-{{ section.id }} .vso-benefit-section__carousel-slide:last-child { margin-right: 0; }

  .vso-node { display: none; }
  .vso-node--v2 { display: block; }

  @media screen and (min-width: 750px) {
    #shopify-section-{{ section.id }} {
      padding-top: var(--section-padding-top);
      padding-bottom: var(--section-padding-bottom);
      margin-top: {{ section.settings.margin_top }}px;
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }

    #shopify-section-{{ section.id }} > .vso-benefit-section__container > .vso-benefit-section__grid {
      grid-template-columns: repeat({{ card_cols_tablet }}, 1fr);
    }

    #shopify-section-{{ section.id }} > .vso-benefit-section__container > .vso-benefit-section__title {
      font-size: var(--heading-font-size);
    }

    #shopify-section-{{ section.id }} .vso-benefit-section__card-title { font-size: var(--card-title-font-size); }
    #shopify-section-{{ section.id }} .vso-benefit-section__card-description { font-size: var(--card-desc-font-size); }

    #shopify-section-{{ section.id }} .mobile-only { display: none; }
    #shopify-section-{{ section.id }} .desktop-tablet-only { display: grid; }
  }

  @media screen and (min-width: 990px) {
    #shopify-section-{{ section.id }} > .vso-benefit-section__container > .vso-benefit-section__grid {
      grid-template-columns: repeat({{ card_cols_desktop }}, 1fr);
    }
  }

  #shopify-section-{{ section.id }} .vso-benefit-section__swipe-indicator { display: none !important; }
  #shopify-section-{{ section.id }} .vso-benefit-section__swipe-indicator {
    position: absolute;
    bottom: 10px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 4px;
    opacity: 0.7;
    transition: opacity 0.5s ease;
    padding: 8px 15px;
    background: rgba(0,0,0,0.1);
    border-radius: 15px;
    pointer-events: none;
  }
  #shopify-section-{{ section.id }} .vso-benefit-section__swipe-indicator > .indicator-dot {
    width: 6px;
    height: 6px;
    background-color: #555;
    border-radius: 50%;
  }
{%- endstyle -%}

